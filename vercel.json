{
  "version": 2,
  "name": "mediai",
  "buildCommand": "cd web/Frontend && npm install && npm run build",
  "outputDirectory": "web/Frontend/dist",
  "installCommand": "cd web/Backend && npm install",
  "rewrites": [
    {
      "source": "/api/v1/:path*",
      "destination": "/api/index.js"
    },
    {
      "source": "/socket.io/:path*",
      "destination": "/api/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "api/index.js": {
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
}
