{
  "version": 2,
  "name": "healthbridge-ai",
  "builds": [
    {
      "src": "web/Backend/server.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb"
      }
    },
    {
      "src": "web/Frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/v1/(.*)",
      "dest": "web/Backend/server.js",
      "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"]
    },
    {
      "src": "/socket.io/(.*)",
      "dest": "web/Backend/server.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "web/Frontend/dist/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "web/Backend/server.js": {
      "memory": 1024,
      "maxDuration": 60,
      "includeFiles": "web/Backend/**"
    }
  }
}
